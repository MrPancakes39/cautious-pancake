{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "lib": ["ESNext"],
        "moduleResolution": "NodeNext",
        "strict": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "newLine": "LF",
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["./src"]
}
